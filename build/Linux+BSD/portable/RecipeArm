#!/bin/bash

# This file is designed to run in debian jessie docker images

main() {

  case $1 in
    "--fetch-dependencies-only")
      fetchDependencies
      ;;
    "--build-only")
      build
      ;;
    "--package-only")
      package
      ;;
    *)
      fetchDependencies;
      build;
      package;
  esac
}

##########################################################################
##########################################################################
fetchDependencies() {
  echo 'fetching'

  echo `apt-get install -y libqt5multimedia5 libqt5multimediawidgets5 libqt5positioning5 libqt5sensors5 libqt5webkit5 qt5-image-formats-plugins qml-module-qtquick-controls libicu52 libpulse0 libjson-c-dev libexpat1-dev libdbus-1-3 libglib2.0-0 libkeyutils-dev libwrap0 libacl1 libreadline6 libbz2-1.0 libpcre3`

}

########################################################
########################################################
build() {
  echo 'building'
}


##########################################################################
##########################################################################
package() {
  echo 'packaging'
}

main "$@"
